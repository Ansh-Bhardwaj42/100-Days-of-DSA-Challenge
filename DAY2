/* Problem: Write a C program to delete an element at a given 1-based position from an array of n integers. Shift remaining elements to the left. */

#include <stdio.h>

int main() {
    int b, posn;

    printf("Enter number of elements: ");
    scanf("%d", &b);

    int arr[100];   // assuming max size

    printf("Enter %d elements:\n", b);
    for(int i = 0; i < b; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter position (1-based): ");
    scanf("%d", &posn);

    // Shift elements to left
    for(int i = posn - 1; i < b - 1; i++) {
        arr[i] = arr[i + 1];
    }

    printf("Updated array:\n");
    for(int i = 0; i < b - 1; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
